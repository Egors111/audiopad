#!/bin/bash
# Version with combined microphone
if [ "$1" == "-u" ]; then
# Deactivate
pactl unload-module module-null-sink
pactl unload-module module-loopback
pactl unload-module module-remap-source

else
# Activate 
pactl load-module module-null-sink sink_name=AudioPad_sink
pactl load-module module-loopback sink=AudioPad_sink
pactl load-module module-remap-source source_name=AudioPad master=AudioPad_sink.monitor
fi

